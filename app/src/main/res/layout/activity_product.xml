<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity"
    android:background="#F8F8F8">


    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius"
        android:drawableLeft="@drawable/searchonly"
        android:text="search"
        android:textColor="#BABABA"
        android:textSize="14sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/group2"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <ImageView
        android:layout_width="292.38714599609375dp"
        android:layout_height="176dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/oil"
        android:id="@+id/oil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:id="@+id/offstoreBtn"
        app:layout_constraintStart_toStartOf="@id/oil"
        app:layout_constraintTop_toBottomOf="@id/oil"
        android:text="offical store"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:backgroundTint="@null"
        android:background="@drawable/button_style"

        />

    <Button
        android:id="@+id/bluebtn"
        android:layout_width="130dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_style"
        android:text="free delivery"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        app:backgroundTint="#0418CE"
        app:layout_constraintStart_toEndOf="@id/offstoreBtn"

        app:layout_constraintTop_toTopOf="@+id/offstoreBtn" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#808080"
        android:id="@+id/bigtext"
        app:layout_constraintTop_toBottomOf="@+id/offstoreBtn"
        app:layout_constraintStart_toStartOf="@+id/oil"
        app:layout_constraintEnd_toEndOf="@id/oil"
        android:layout_marginTop="10dp"
        android:text="Discusses the factors that make a logo successful by analyzing the research, brainstorming, sketching, and stylistic experiments that led to its development"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120"
        android:textSize="19sp"
        android:textColor="#000000"
        android:id="@+id/price"
        app:layout_constraintStart_toStartOf="@+id/bigtext"
        app:layout_constraintTop_toBottomOf="@id/bigtext"
        android:layout_marginTop="5dp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="13sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintBaseline_toBaselineOf="@id/price"

        android:id="@+id/dollar"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/dollar"
        android:text="149"
        android:id="@+id/realPrice"
        android:layout_marginStart="10dp"
        android:textColor="#5B5959"
        android:textSize="18sp"
        app:layout_constraintBaseline_toBaselineOf="@id/price"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="13sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/realPrice"
        app:layout_constraintBaseline_toBaselineOf="@id/realPrice"

        android:id="@+id/secondDollar"

        />

    <Button
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:background="@drawable/button_style"
        app:backgroundTint="#FFBE5B"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:id="@+id/nonactive"
        android:text="Offers"
        android:gravity="start|center_vertical"
        android:paddingStart="16dp"
        android:textColor="#FFFFFF"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/textView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/nonactive"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius"
        android:padding="10dp"
        android:id="@+id/choose"
        android:orientation="vertical"

        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Various installment options"
            android:textColor="#000000"
            android:textSize="14sp"
            android:drawableLeft="@drawable/vector"
            android:drawablePadding="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly installment"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/vector"
            />

        <TextView
            android:drawableLeft="@drawable/vector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumia birthday"
            android:textColor="#000000"
            android:textSize="14sp"
            android:drawablePadding="8dp"
            android:layout_marginTop="12dp"

            />
        
    </LinearLayout>

    <Button
    android:layout_width="229dp"
    android:layout_height="42dp"
    android:layout_marginTop="20dp"
    android:id="@+id/AddBtn"
    app:layout_constraintStart_toStartOf="@id/choose"
    app:layout_constraintTop_toBottomOf="@id/choose"
    android:text="Add to Cart"
    android:textStyle="normal"
    android:textSize="14sp"
    android:textColor="#FFFFFF"
    app:backgroundTint="@null"
    android:background="@drawable/button_style"

    />

    <Button
        android:layout_width="43.29dp"
        android:layout_height="43.29dp"

        android:id="@+id/Home"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/AddBtn"

        app:backgroundTint="@null"
        android:background="@drawable/transparent_btn"
        android:drawableTop="@drawable/home"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        />

    <Button
        android:layout_width="43.29dp"
        android:layout_height="43.29dp"

        android:id="@+id/Phone"
        app:layout_constraintEnd_toStartOf="@+id/Home"
        app:layout_constraintTop_toTopOf="@+id/AddBtn"
        android:layout_marginEnd="14dp"

        app:backgroundTint="@null"
        android:background="@drawable/transparent_btn"
        android:drawableTop="@drawable/call"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"

        />



</androidx.constraintlayout.widget.ConstraintLayout>